{
  "name": "Errator",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Errator bring javascript errors front and center.",
  "homepage_url": "http://octatone.github.com/errator",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Errator"
  },
  "permissions": [
    "tabs",
    "debugger",
    "http://*/*",
    "https://*/*"
  ]
}